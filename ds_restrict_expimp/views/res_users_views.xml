<odoo>
    <record id="view_users_form_export_import_restriction" model="ir.ui.view">
        <field name="name">res.users.form.export.import.restriction</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='access_rights']" position="inside">
                <group>
                    <group string="Export/Import Restrictions">
                        <field name="restrict_export" widget="late_boolean"/>
                        <field name="restrict_import" widget="my_text_field"/>
                        <field name="restrict_export_on_model_ids" widget="many2many_tags" attrs="{'invisible':[('restrict_export', '=', False)]}"/>
                        <field name="restrict_import_on_model_ids" widget="many2many_tags" attrs="{'invisible':[('restrict_import', '=', False)]}"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>